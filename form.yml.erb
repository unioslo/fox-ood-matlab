---
cluster: "fox"

form:
  - auto_modules_MATLAB
  - global_fox_alacarte
  - ec_matlab_glx
  - auto_accounts
  - bc_num_hours
  - ec_modules
  - ec_cpus
  - ec_mem
  - ec_gpus

attributes:

  auto_modules_MATLAB:
    default: false

  auto_accounts:
          label: "Choose the Educloud project to run under:"
          help: |
                 <small>If you are unsure, ask the project principal</small>


  ec_matlab_glx:
    label: "Use hardware rendering for MATLAB GUI"
    help: |
      <small>This will add `-nosoftwareopengl` to the matlab command line when requesting a GPU<br>
      <i>Note: Not supported on MIG</i> </small>
    widget: "check_box"
    checked_value: 1
    unchecked_value: 0
    value: 0
    
  ec_cpus:
    label: "Number of CPU cores:"
    widget: "number_field"
    value: "1"
    required: true

  ec_gpus:
    label: "Number of GPUs:"
    widget: "number_field"
    value: "0"
    required: true

  ec_mem:
    label: "RAM (in GB):"
    value: "1"
    widget: "number_field"
    required: true

  ec_modules:
    label: "Additional modules (optional)"
    help: |
        <small>Space separated list of additional modules to load.</br/>
        </br/>
        Run `module avail` for a full list </small>

  bc_num_hours:
    label: "Runtime (in hours)"
